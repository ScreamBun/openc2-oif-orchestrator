image: docker:latest

variables:
  GIT_SSL_NO_VERIFY: "true"
  DOCKER_DRIVER: overlay2
  IMAGE_NAME: $CI_REGISTRY/screamingbunny/logger

services:
  - name: docker:dind
    command:
      - /bin/sh
      - -c
      - |
          apk update && apk add openssl
          mkdir -p /etc/docker/certs.d/$CI_REGISTRY
          wget -O - http://portal.g2-inc.com/sites/default/files/all.crt --no-check-certificate | openssl x509 -inform der > /etc/docker/certs.d/$CI_REGISTRY/ca.crt || exit
          dockerd-entrypoint.sh || exit

stages:
  - build

before_script:
  - docker login -u gitlab-ci-token -p $CI_JOB_TOKEN $CI_REGISTRY


Build-Server:
  stage: build
  script:
    - sh .pipeline_trigger_orchestrator
    - sh .pipeline_trigger_device
    - cd server
    - docker build -t $IMAGE_NAME/server -f Dockerfile .
    - docker push $IMAGE_NAME/server

Build-GUI:
  stage: build
  script:
    - cd gui
    - docker build -t $IMAGE_NAME/gui -f Dockerfile .
    - docker push $IMAGE_NAME/gui
  cache:
    key: ${CI_COMMIT_REF_SLUG}
    paths:
      - gui/node_modules/

